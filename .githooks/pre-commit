#!/bin/bash
# Pre-commit hook for Go projects
# Checks formatting and runs basic validations

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo "Running pre-commit checks..."

# Get list of staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -n "$STAGED_GO_FILES" ]; then
    # Check gofmt
    UNFORMATTED=$(gofmt -l $STAGED_GO_FILES)
    if [ -n "$UNFORMATTED" ]; then
        echo -e "${RED}Go files must be formatted with gofmt. Please run:${NC}"
        for file in $UNFORMATTED; do
            echo "  gofmt -w $file"
        done
        exit 1
    fi
    echo -e "${GREEN}✓${NC} gofmt"

    # Check go vet
    go vet ./... 2>/dev/null || {
        echo -e "${RED}go vet failed${NC}"
        exit 1
    }
    echo -e "${GREEN}✓${NC} go vet"

    # Check build
    go build ./... 2>/dev/null || {
        echo -e "${RED}go build failed${NC}"
        exit 1
    }
    echo -e "${GREEN}✓${NC} go build"
fi

echo -e "${GREEN}All pre-commit checks passed!${NC}"
